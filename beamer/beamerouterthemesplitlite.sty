\defbeamertemplate*{footline}{split theme}
{
  \leavevmode%
  \hbox{%

\begin{beamercolorbox}[wd=.85\paperwidth,ht=2.25ex,dp=1ex,left]{author in head/foot}%
  %  put section: subsection in the footer (bottom-left)
  \usebeamerfont{author in head/foot}
  % \hspace*{2ex}\insertshorttitle  % insert title in footer
  % \hspace*{2ex}\insertsection  % insert section in footer

  % insert the title of the most deeply nested section in the footer
  \ifx\insertsubsection\empty
    \ifx\insertsectionhead\empty      % no footer if both subsection and section are empty
      \else
        \, \insertsectionhead           % insert section if defined and subsection undefined
    \fi
  \else
    \, \insertsubsection           % insert subsection if defined
  \fi



